package quarto;

import java.util.Locale;
import java.util.Scanner;

public class QuartoAlugado {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		int n =0;
		String[] nome = new String[10];
		String[] email = new String[10];
		//int[] quarto = new int[n];
		while (n < 1 || n> 10) { 
		  System.out.print("Entre com o nÃºmero de alugadores:");	
		  n = sc.nextInt();
		  if (n> 10 || n<0) {
			  System.out.println("Digite um nr entre 1 e 10");
		  }
		  
		}
		System.out.println("sai do while");
		if (n==3) {
			System.out.println("entre com o nome: ");
			nome[5]= sc.nextLine();
		    sc.next();
		    System.out.println("entre com o E-mail: ");
		    email[5] = sc.nextLine();
		    sc.next();
		    System.out.println("entre com o nome: ");
		    nome[1]= sc.nextLine();
		    sc.next();
		    System.out.println("entre com o E-mail: ");
		    email[1] = sc.nextLine();
		    sc.next();
		    System.out.println("entre com o nome: ");
		    nome[8]= sc.nextLine();
		    sc.next();
		    System.out.println("entre com o E-mail: ");
		    email[8] = sc.nextLine();
		    sc.nextLine();
		 
		} 
		for(int x=0;x<10;x++) {
			if (nome[x] !=null) {
				System.out.print(x+" ");
				System.out.print(nome[x]+" ");
				System.out.println(email[x]);
				
			}
		} 	
		
		
		sc.close();
}
}